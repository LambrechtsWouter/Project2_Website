{# extend the parent tpl #}
{% extends 'layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'World Conqueror -  Browse' %}
{% set css ='/css/home.css' %}

{# overwrite the pageContent block #}
{% block pageContent %}
<div class="container" id="content">
  <div class="row-fluid">
  	<div class="span4 info" id="register">
  		<H1>Registreer je nu !!!!</h1>
  		Met deze registratie heb je een tal van voordelen
  		<ul>
  			<li>Het bekijken van alle routes op deze site</li>
  			<li>Gratis inloggen op de App</li>
  			<li>Het maken van je eigen Routes</li>
  		</ul>
  	</div>
 	<div class="span8 form">
 		 <div  class="form">
    		<form id="contactform" action="#" method="POST"> 
    			<p class="contact"><label for="email">Email</label></p> 
    			<input id="email" name="email" placeholder="example@domain.com" required="" type="email"> 
    			 
                <p class="contact"><label for="password">Create a password</label></p> 
    			<input type="password" id="password" name="password" required=""> 
                <p class="contact"><label for="repassword">Confirm your password</label></p> 
    			<input type="password" id="repassword" name="repassword" required=""> 
        
            <input class="buttom" name="submit" id="submit" tabindex="5" value="Sign me up!" type="submit"> 	 
   </form> 
 	</div>	
 	</div>
   </div>
</div>
{% endblock %}